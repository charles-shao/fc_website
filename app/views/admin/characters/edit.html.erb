<div class="container">
  <div class="row mt-5">
    <div class="col col-12">

      <h2><%= "Editing #{@character.name}"%></h2>

      <%= form_for [:admin, @character] do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="d-flex justify-content-end">
          <div><%= form.submit class: 'btn btn-outline-primary' %></div>
          <div class="pl-1"><%= link_to "Back", characters_path, class: 'btn btn-secondary' %></div>
        </div>
      <% end %>
    </div>

  </div>
</div>
