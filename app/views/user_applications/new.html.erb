<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col col-6">
      <h2>Free Company application</h2>

      <%= form_for @user_application do |form| %>

        <div class="form-group row">
          <%= form.label :game, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.text_field :game, class: "form-control", disabled: 'disabled' %>
          </div>
        </div>

        <%= form.fields_for :user_application_answers do |builder| %>
          <div class="form-group">
            <%= builder.label :content, builder.object.application_question.content %>
            <%= builder.text_field :content, class: 'form-control' %>
            <%= builder.hidden_field :application_question_id, class: 'form-control' %>
          </div>
        <% end %>

        <%= form.submit value: "Submit Application", class: 'btn btn-outline-primary' %>
      <% end %>

    </div>
  </div>
</div>
