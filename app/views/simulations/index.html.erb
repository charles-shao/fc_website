<%= include_gon(namespace: 'simulation', init: true) %>
<%= javascript_include_tag "simulator/manifest.js" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div id="simulation-chart" style="min-width: 100%; height: 480px; margin 0 auto;"></div>
    </div>
  </div>

  <div class="row">

    <div class="col-3">
      <h2>Player Options</h2>
      <form>
        <div class="form-group">
          <label>Job</label>
          <select data-bind="options: jobs, optionsText: 'name', value: selectedJob" class="form-control"></select>
        </div>

        <div class="form-group">
          <label>Player Name</label>
          <input type="text" class="form-control" data-bind="value: playerName"></input>
        </div>

        <button class="btn btn-outline-primary" data-bind="click: savePlayerScript">Save Script</button>
      </form>
    </div>

    <div class="col-9">
      <h2>Combat Simulator</h2>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Seq.</th>
            <th>Time</th>
            <th>Action</th>
            <th>Effects</th>
            <th>Potency</th>
            <th>Self-multipliers</th>
            <th>Target Multipliers</th>
            <th>Crit Chance</th>
            <th>Crit Variance</th>
            <th>Total Potency</th>
            <th>Clear</th>
          </tr>
        </thead>
        <tbody data-bind="foreach: { data: routine.slots, as: 'slot' }">
          <!-- if action is empty from the slot, popupate a drop down box to replace -->
          <tr>
            <td data-bind="text: slot.id"></td>
            <td></td>
            <td data-bind="with: slot.action">
              <p data-bind="text: name"></p>
            </td>
            <td></td>
            <td data-bind="with: slot.action">
              <p data-bind="text: potency"></p>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
              <a href="#" data-bind="click: slot.clearAction">Action<a> |
              <a href="#" data-bind="click: $root.removeSlotFromRoutine">Slot<a>
            </td>
          </tr>
        </tbody>
