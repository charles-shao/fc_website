<div class="container">

  <div class="row mt-5">
    <div class="col col-6">
      <h2>Profile Details</h2>

      <%= form_for current_user, url: profiles_path do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, type: 'email', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :timezone %>
          <%= form.select :timezone, timezone_options, {}, class: 'form-control' %>
        </div>

        <%= form.submit value: "Update", class: 'btn btn-outline-primary' %>
      <% end %>

    </div>
  </div>

  <div class="row mt-5">
    <div class="col col-6">
      <h2>Character Details</h2>
    </div>
  </div>

</div>
