<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="pt-5">Users</h2>

      <table class="table">
        <thead class="thead-default">
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role&.name %></td>
                <td>
                  <%= link_to "Edit", edit_member_path(user), class: "btn btn-outline-warning" %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%# link_to "Create", new_application_question_path, class: "btn btn-outline-primary" %>
      <%= link_to "Back", dashboard_index_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
