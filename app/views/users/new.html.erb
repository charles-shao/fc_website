<div class="container">
  <div class="col-md-6 col-md-offset-3">

    <h2>Register an account</h2>

    <%= form_for @user, class: "form" do |form| %>
      <%= render partial: '/users/form', object: form %>

      <div class="form-actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>
