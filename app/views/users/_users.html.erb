<table class="table">
  <thead class="thead-default">
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
  </thead>

  <tbody>
    <% users.each_with_index do |user, index| %>
      <tr>
          <td><%= index + 1 %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role&.name %></td>
          <td>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-warning" %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
