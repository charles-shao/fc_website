<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="pt-5">Manage Members</h2>
      <table class="table">
        <thead class="thead-inverse">
            <th>Name</th>
            <th>Position</th>
            <th>Actions</th>
        </thead>

        <tbody>
          <% @static_members.each do |static_member| %>
            <tr>
                <td><%= static_member.user.name %></td>
                <td><%= static_member.position %></td>
                <td>
                  <%= link_to "Remove", static_static_member_path(@static, static_member), method: :delete, class: "btn btn-outline-danger" %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_for [:static, @static.static_members.new], class: "form-inline" do |form| %>
        <%= form.label :user_id, "Member", class: "mr-sm-2" %>
        <%= form.select :user_id, member_options, {}, class: "custom-select mb-2 mr-sm-2 mb-sm-0" %>

        <%= form.label :position, "Position", class: "mr-sm-2" %>
        <%= form.select :position, position_options, {}, class: "custom-select mb-2 mr-sm-2 mb-sm-0" %>

        <%= form.submit value: "Add Member", class: 'btn btn-outline-primary' %>
      <% end %>

      <%= link_to "Back", statics_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
