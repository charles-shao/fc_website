<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="pt-5">Manage Members (<%= @static_members.count %>)</h2>
      <table class="table">
        <thead class="thead-inverse">
            <th>Name</th>
            <th>Position</th>
            <th>Actions</th>
        </thead>

        <tbody>
          <% @static_members.each do |static_member| %>
            <tr>
                <td><%= static_member.user.name %></td>
                <td><%= static_member.position %></td>
                <td>
                  <%= link_to "Remove", static_static_member_path(@static, static_member), method: :delete, class: "btn btn-outline-danger" %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @available_members.any? %>
        <%= form_for [:static, @static.static_members.new] do |form| %>
          <div class="row">
            <div class="col-4">
              <div class="form-group">
                <%= form.label :user_id, "Member" %>
                <%= form.select :user_id, member_options, {}, class: "form-control" %>
              </div>
            </div>

            <div class="col-4">
              <div class="form-group">
                <%= form.label :position, "Position" %>
                <%= form.select :position, position_options, {}, class: "form-control" %>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <%= form.submit value: "Add Member", class: 'btn btn-outline-primary' %>
          </div>
        <% end %>
      <% end %>

      <%= link_to "Back", statics_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
