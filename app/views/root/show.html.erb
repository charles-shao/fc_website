<div class="container-splash">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="row">

          <div class="col-12">
            <div class="splash-header">
              <%= embedded_svg 'splash_logo.svg', class: 'splash-logo' %>
            </div>
          </div>

          <div class="col-12">
            <div class="splash-body">
              <h1 class="text-center">Last Bastion</h1>
              <h4 class="text-center">An end-game Free Company on Behemoth server</h4>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="row pt-5">
    <div class="col-12">
      <h1>Recent Notices</h1>
    </div>

    <div class="col-12">
      <% @notices.each do |notice| %>
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="" alt="...">
              </a>
            </div>

            <div class="media-body">
              <h4 class="media-heading">
                <%= notice.title %>
                <small>by <%= notice.user.email %> on the <%= notice.created_at %></small>
              </h4>

              <p><%= notice.content %></p>
            </div>
          </div>
      <% end %>
    </div>

  </div>
</div>

<div class="container">

  <h1 class="display">Progression</h1>
  <h2>Alexander: The Creator (Savage)</h2>

  <div class="row">
    <% 6.times do %>
      <div class="col-4">
        <div class="card">
          <img class="card-img-top" src="" alt="Card image cap">
          <div class="card-block">
            <h4 class="card-title">A12S</h4>
            <p class="card-text">Cleared 01/01/16</p>
            <a href="#" class="btn btn-outline-primary">View Parses</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
