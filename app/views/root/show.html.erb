<div class="container-splash">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="row">

          <div class="col-12">
            <div class="splash-header">
              <%= embedded_svg 'splash_logo.svg', class: 'splash-logo' %>
            </div>
          </div>

          <div class="col-12">
            <div class="splash-body">
              <h1 class="text-center">Last Bastion</h1>
              <h4 class="text-center">An end-game Free Company on Behemoth server</h4>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<div class="container-stretch">
  <div class="container">
    <div class="container-stretch-body row">
      <h1 class="display-4">Recent Notices</h1>

      <div class="col-12">
        <% @notices.each do |notice| %>
          <div class="media pt-5">
            <div class="media-left">
              <a href="#">
                <%= image_tag "ffxiv_twi.png", class: "media-object" %>
              </a>
            </div>

            <div class="media-body pl-3">
              <h4 class="media-heading">
                <%= notice.title %>
                <small>by <%= notice.user.name || "Anonymous" %> on the <%= notice.created_at %></small>
              </h4>

              <p>
                <%= truncate(notice.content, length: 150, omission: "...") do %>
                  <%= link_to "read more", notice_path(notice) %>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-12 pt-5">
        <%= link_to "View all notices", view_notices_path %>
      </div>

    </div>
  </div>
</div>

<% if @static_progressions.any? %>
  <%= render partial: "progression" %>
<% end %>

<%= render partial: "about" %>
<%= render partial: "games" %>
<%= render partial: "application" %>
