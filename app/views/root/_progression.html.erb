<div class="container-stretch container-alternate">
  <div class="container">
    <div class="container-stretch-body row">
      <div class="col-sm-12">
        <h1 class="display-4">
          Progression
        </h1>
      </div>

      <% @static_progressions.each do |static_progression| %>
        <div class="col-sm-4 p-3">
          <div class="card">
            <%= image_tag (static_progression.raid_content.image_path), class: "card-img-top img-fluid", alt: static_progression.raid_content.name %>
            <div class="card-block">
              <h5 class="card-title"><%= "#{static_progression.static.name} clears #{static_progression.raid_content.name}!" %></h5>
              <p class="card-text">Cleared <%= static_progression.cleared_at %></p>

              <a href="#" class="btn btn-info disabled">View Parses</a>
              <a href="#" class="btn btn-info disabled">View Video</a>
            </div>
            <div class="card-footer">
              <small class="text-muted"><%= "Last updated #{time_ago_in_words(static_progression.updated_at)} ago" %></small>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
