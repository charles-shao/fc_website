<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col col-6">
      <h2>Adding Raid Content</h2>

      <%= form_for @raid_content do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :patch %>
          <%= form.text_field :patch, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :released_at %>
          <%= form.date_select :released_at, {} %>
        </div>

        <div class="form-group">
          <%= form.label :image_file %>
          <%= form.text_field :image_file, class: 'form-control' %>
        </div>

        <%= form.submit class: 'btn btn-outline-primary' %>
        <%= link_to "Back", raid_contents_path, class: 'btn btn-secondary' %>

      <% end %>
    </div>
  </div>
</div>
