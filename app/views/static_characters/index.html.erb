<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="pt-5">Manage Characters (<%= @static_characters.count %>)</h2>
      <table class="table">
        <thead class="thead-default">
            <th>Name</th>
            <th>Position</th>
            <th>Actions</th>
        </thead>

        <tbody>
          <% @static_characters.each do |static_character| %>
            <tr>
                <td><%= static_character.character.name %></td>
                <td><%= static_character.position %></td>
                <td>
                  <%= link_to "Remove", static_static_character_path(@static, static_character), method: :delete, class: "btn btn-outline-danger" %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @available_characters.any? %>
        <%= form_for [:static, @static.static_characters.new] do |form| %>
          <div class="row">
            <div class="col-4">
              <div class="form-group">
                <%= form.label :character_id, "Character" %>
                <%= form.select :character_id, character_options, {}, class: "form-control" %>
              </div>
            </div>

            <div class="col-4">
              <div class="form-group">
                <%= form.label :position, "Position" %>
                <%= form.select :position, position_options, {}, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= form.submit value: "Add Character", class: 'btn btn-outline-primary' %>
          </div>
        <% end %>
      <% end %>

      <%= link_to "Back", statics_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
