<div class="container">
  <div class="row justify-content-md-center mt-5">
    <div class="col col-6">
      <h2>Editing Progression</h2>

      <%= form_for [@static, @progression] do |form| %>
        <div class="form-group">
          <%= form.label :raid_content_id, "Raid Content" %>
          <%= form.select :raid_content_id, progression_options(selected: @progression.id), {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :cleared_at %>
          <%= form.datetime_field :cleared_at, class: "form-control" %>
        </div>

        <%= form.submit class: 'btn btn-outline-primary' %>
        <%= link_to "Back", statics_path, class: 'btn btn-secondary' %>

      <% end %>
    </div>
  </div>
</div>
