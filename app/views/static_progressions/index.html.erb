<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="pt-5">Manage Progression</h2>
      <table class="table">
        <thead class="thead-inverse">
            <th>Raid Content</th>
            <th>Cleared At</th>
            <th>Actions</th>
        </thead>

        <tbody>
          <% @static_progressions.each do |static_progression| %>
            <tr>
                <td><%= static_progression.raid_content.name %></td>
                <td><%= static_progression.raid_content.cleared_at %></td>
                <td>
                  <%= link_to "Remove", static_static_progression, method: :delete, class: "btn btn-outline-danger" %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_for [:static, @static.static_progressions.new], class: "form-inline" do |form| %>
        <%= form.label :raid_content_id, "Raid Content", class: "mr-sm-2" %>
        <%= form.select :raid_content_id, options_from_collection_for_select(RaidContent.all, :id, :name), {}, class: "custom-select mb-2 mr-sm-2 mb-sm-0" %>


        <%= form.submit value: "Add Clear", class: 'btn btn-outline-primary' %>
      <% end %>

      <%= link_to "Back", statics_path, class: 'btn btn-secondary' %>

    </div>
  </div>
</div>
