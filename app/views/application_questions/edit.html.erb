<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h2>Editing Application Question</h2>

      <%= form_for @application_question do |form| %>
        <div class="form-group">
          <%= form.label :content, "Question" %>
          <%= form.text_field :content, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :rank %>
          <%= form.text_field :rank, class: 'form-control' %>
        </div>

        <div class="checkbox">
          <label>
            <%= form.check_box :active %> Active
          </label>
        </div>

        <div class="form-actions">
          <%= form.submit class: 'btn btn-primary' %>
          <%= link_to "Back", application_questions_path, class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
