<!DOCTYPE html>
<html>
  <head>
    <title>Last Bastion</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag("favicons/apple-touch-icon.png", rel: "apple-touch-icon", sizes: "57x57") %>
    <%= favicon_link_tag("favicons/favicon.ico", rel: :icon, type: :icon, sizes: "48x48") %>
    <%= favicon_link_tag("favicons/favicon-16x16.png", rel: :icon, type: "image/png", sizes: "16x16") %>
    <%= favicon_link_tag("favicons/favicon-32x32.png", rel: :icon, type: "image/png", sizes: "32x32") %>
    <%= favicon_link_tag("favicons/mstile-70x70.png", rel: "mstile", type: "image/png", sizes: "70x70") %>

    <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
  </head>

  <body>

    <%= render partial: "layouts/header" %>

    <% unless controller_name.eql? "root" %>
      <div class="container">
        <div class="row mt-4">
          <div class="col-12">
            <%= flash_message %>
          </div>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <%= render partial: "layouts/footer" %>
  </body>

</html>
