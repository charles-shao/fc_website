<!DOCTYPE html>
<html>
  <head>
    <title>Last Bastion</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
  </head>

  <body>

    <nav class="navbar navbar-toggleable-md navbar-inverse bg-primary">
      <div class="container">

        <nav class="navbar navbar-light">
          <%= link_to "Last Bastion", root_path, class: "navbar-brand" %>
        </nav>
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav ml-auto">
            <% if signed_in? %>
              <li class="nav-item">
                <%= link_to 'Apply for FC', new_user_application_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Dashboard', dashboard_index_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign out', sign_out_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Sign in', sign_in_path, class: "nav-link" %>
              </li>

              <li class="nav-item">
                <%= link_to 'Register', sign_up_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>

      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <%= flash_message %>
        </div>
      </div>
    </div>

    <%= yield %>

  </body>

</html>
